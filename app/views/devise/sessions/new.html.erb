<div class="login-form">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group">

    <%= f.email_field :email, autofocus: true, placeholder:"Email", class: "form-control login-field" %>
    <label for="login-name" class="login-field-icon fui-user"></label>
  </div>

  <div class="form-group">
    <%= f.password_field :password, autocomplete: "off", placeholder: "Password", class: "form-control login-field" %>
    <label for="login-pass" class="login-field-icon fui-lock"></label>
  </div>

    <%= f.submit "Log in",  class: "btn btn-primary btn-lg btn-block" %>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

<%= render "devise/shared/links" %>
<% end %>

</div>

